  },
  "dependencies": {
    "@party/types": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.6.3"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  }
}
