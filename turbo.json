{
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"],
      "env": [
        "NODE_ENV", 
        "NEXT_PUBLIC_*", 
        "PYTHONPATH",
        "SUPABASE_SERVICE_ROLE_KEY",
        "OPENAI_API_KEY",
        "IMAGE_PROCESSOR_BASE_URL",
        "DATABASE_URL",
        "STORAGE_TYPE",
        "LOCAL_STORAGE_PATH",
        "LOCAL_STORAGE_BASE_URL",
        "ADMIN_PASSWORD",
        "NEXT_PUBLIC_DEBUG_MODE",
        "NEXT_PUBLIC_APP_ENV",
        "NEXT_PUBLIC_CORS_ORIGINS"
      ]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "build/**", "__pycache__/**"],
      "env": [
        "NODE_ENV", 
        "NEXT_PUBLIC_*", 
        "PYTHONPATH",
        "SUPABASE_SERVICE_ROLE_KEY",
        "OPENAI_API_KEY",
        "IMAGE_PROCESSOR_BASE_URL",
        "DATABASE_URL",
        "STORAGE_TYPE",
        "LOCAL_STORAGE_PATH",
        "LOCAL_STORAGE_BASE_URL",
        "ADMIN_PASSWORD",
        "NEXT_PUBLIC_DEBUG_MODE",
        "NEXT_PUBLIC_APP_ENV",
        "NEXT_PUBLIC_CORS_ORIGINS",
        "DATABASE_POOL_SIZE",
        "DATABASE_POOL_TIMEOUT",
        "LOG_LEVEL",
        "ENABLE_REQUEST_LOGGING",
        "RATE_LIMIT_REQUESTS_PER_MINUTE",
        "RATE_LIMIT_WINDOW_MS",
        "MAX_FILE_SIZE_MB",
        "MAX_FILES_PER_REQUEST",
        "CACHE_TTL_SECONDS",
        "ENABLE_REDIS_CACHE",
        "ENABLE_ANALYTICS",
        "SENTRY_DSN"
      ]
    },
    "deploy:image-processor": {
      "cache": false,
      "dependsOn": ["build"],
      "inputs": [
        "apps/image-processor/**",
        "!apps/image-processor/tests/**",
        "!apps/image-processor/docs/**",
        "!apps/image-processor/README.md"
      ],
      "outputs": []
    },
    "deploy:magic-marker": {
      "cache": false,
      "dependsOn": ["build"],
      "inputs": [
        "apps/magic-marker/**",
        "!apps/magic-marker/docs/**",
        "!apps/magic-marker/analysis_flows.sql",
        "!apps/magic-marker/latest_analysis_flows.sql",
        "!apps/magic-marker/frontend/uploads/**",
        "!apps/magic-marker/web/uploads/**",
        "!apps/magic-marker/web/test-results/**",
        "!apps/magic-marker/web/playwright-report/**",
        "!apps/magic-marker/web/test.png",
        "!apps/magic-marker/web/test_image.*",
        "!apps/magic-marker/web/production_data.sql",
        "!apps/magic-marker/web/tsconfig.tsbuildinfo"
      ],
      "outputs": []
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**", ".vitest/**", "htmlcov/**"],
      "env": ["NODE_ENV", "CI", "PYTHONPATH"]
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "clean": {
      "cache": false,
      "outputs": []
    },
    "format": {
      "cache": false,
      "outputs": []
    },
    "docker:build": {
      "cache": false,
      "outputs": []
    },
    "docker:up": {
      "cache": false,
      "persistent": true,
      "outputs": []
    }
  },
  "globalDependencies": ["**/.env*"]
}
