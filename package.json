{
  "name": "terrabase2",
  "packageManager": "pnpm@8.15.0",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "dev:portal": "turbo run dev --filter=@tb2/portal",
    "dev:party-game": "turbo run dev --filter=@tb2/party-game-*",
    "dev:magic-marker": "./scripts/dev-magic-marker.sh",
    "dev:magic-marker:raw": "turbo run dev --filter=@tb2/magic-marker-*",
    "setup:magic-marker": "./scripts/setup-magic-marker.sh",
    "supabase:start": "cd apps/magic-marker/web && supabase start",
    "supabase:stop": "cd apps/magic-marker/web && supabase stop",
    "supabase:status": "cd apps/magic-marker/web && supabase status",
    "supabase:logs": "cd apps/magic-marker/web && supabase logs",
    "supabase:reset": "cd apps/magic-marker/web && supabase db reset",
    "supabase:dashboard": "cd apps/magic-marker/web && supabase dashboard",
    "migrate:party-game": "pnpm --filter @tb2/party-game-api prisma migrate dev",
    "seed:party-game": "pnpm --filter @tb2/party-game-api prisma db seed",
    "docker:up": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "docker:build": "docker-compose -f docker-compose.dev.yml build",
    "setup:dev": "./scripts/dev-setup.sh",
    "vercel:deploy": "vercel --prod",
    "vercel:deploy:portal": "cd apps/portal && vercel --prod",
    "vercel:deploy:party-game": "cd apps/party-game/web && vercel --prod",
    "vercel:deploy:magic-marker": "cd apps/magic-marker/web && vercel --prod",
    "railway:deploy:party-game-api": "cd apps/party-game/api && railway up",
    "railway:deploy:magic-marker-api": "cd apps/magic-marker/api && railway up",
    "deploy:all": "pnpm vercel:deploy:portal && pnpm vercel:deploy:party-game && pnpm vercel:deploy:magic-marker && pnpm railway:deploy:party-game-api && pnpm railway:deploy:magic-marker-api",
    "infra:init": "cd infrastructure/terraform && terraform init",
    "infra:plan": "cd infrastructure/terraform && terraform plan",
    "infra:apply": "cd infrastructure/terraform && terraform apply",
    "infra:destroy": "cd infrastructure/terraform && terraform destroy",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^20.12.0",
    "eslint": "^9.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.3.0",
    "turbo": "^2.0.0",
    "typescript": "^5.5.0"
  },
  "pnpm": {
    "overrides": {
      "typescript": "^5.5.0",
      "eslint": "^9.0.0"
    }
  },
  "lint-staged": {
    "apps/**/*.{ts,tsx}": [
      "turbo run lint --filter=./apps/magic-marker/web",
      "turbo run type-check --filter=./apps/magic-marker/web"
    ],
    "apps/**/*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write"
    ]
  }
}
