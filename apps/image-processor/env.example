# Storage Configuration
STORAGE_TYPE=local  # Options: local, supabase, none
LOCAL_STORAGE_PATH=./storage
LOCAL_STORAGE_BASE_URL=http://localhost:8000/api/v1/storage

# Supabase Configuration (only used when STORAGE_TYPE=supabase)
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
SUPABASE_ENABLED=true
SUPABASE_REQUESTS_TABLE=processing_requests
SUPABASE_RESULTS_TABLE=processing_results
SUPABASE_ERRORS_TABLE=validation_errors
SUPABASE_METRICS_TABLE=performance_metrics
SUPABASE_CLEANUP_ENABLED=true
SUPABASE_CLEANUP_DAYS=30

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Service Configuration
SERVICE_NAME=image-processor
SERVICE_VERSION=1.0.0
LOG_LEVEL=INFO

# Model Configuration
REALESRGAN_MODEL_PATH=/app/models/RealESRGAN_x4plus.pth
ESRGAN_MODEL_PATH=/app/models/RRDB_ESRGAN_x4.pth

# File Validation Configuration
MAX_IMAGE_SIZE_BYTES=26214400      # 25MB
MAX_LOGO_SIZE_BYTES=5242880        # 5MB  
MAX_BANNER_SIZE_BYTES=15728640     # 15MB
MAX_IMAGE_WIDTH=8192
MAX_IMAGE_HEIGHT=8192
MIN_IMAGE_WIDTH=16
MIN_IMAGE_HEIGHT=16

# Storage Configuration
TEMP_DIR=/app/temp
OUTPUT_DIR=/app/output
MAX_FILE_SIZE_MB=50

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:3003
